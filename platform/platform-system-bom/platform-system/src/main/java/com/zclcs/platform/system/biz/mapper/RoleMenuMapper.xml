<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zclcs.platform.system.biz.mapper.RoleMenuMapper">

    <sql id="baseSql">
        select srm.role_id,
               srm.menu_id,
               sr.role_name,
               sm.menu_name
        from system_role_menu srm
                 inner join system_role sr on srm.role_id = sr.role_id
                 inner join system_menu sm on srm.menu_id = sm.menu_id
            ${ew.customSqlSegment}
    </sql>
    <sql id="baseCountSql">
        select count(*)
        from system_role_menu srm
                 inner join system_role sr on srm.role_id = sr.role_id
                 inner join system_menu sm on srm.menu_id = sm.menu_id
            ${ew.customSqlSegment}
    </sql>
    <select id="findPageVo" resultType="com.zclcs.platform.system.api.entity.vo.RoleMenuVo">
        <include refid="baseSql"/>
    </select>
    <select id="findListVo" resultType="com.zclcs.platform.system.api.entity.vo.RoleMenuVo">
        <include refid="baseSql"/>
    </select>
    <select id="findOneVo" resultType="com.zclcs.platform.system.api.entity.vo.RoleMenuVo">
        <include refid="baseSql"/>
    </select>
    <select id="countVo" resultType="java.lang.Integer">
        <include refid="baseCountSql"/>
    </select>
</mapper>
