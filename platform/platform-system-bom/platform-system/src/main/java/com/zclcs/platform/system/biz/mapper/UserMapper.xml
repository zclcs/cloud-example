<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zclcs.platform.system.biz.mapper.UserMapper">

    <sql id="baseSql">
        select *
        from (select su.user_id,
                     su.username,
                     su.real_name,
                     su.password,
                     su.dept_id,
                     su.email,
                     su.mobile,
                     su.status,
                     su.last_login_time,
                     su.gender,
                     su.is_tab,
                     su.theme,
                     su.avatar,
                     su.description,
                     su.create_at
              from system_user su) tb
            ${ew.customSqlSegment}
    </sql>
    <sql id="baseCountSql">
        select *
        from (select count(*)
              from system_user su) tb
            ${ew.customSqlSegment}
    </sql>
    <select id="findPageVo" resultType="com.zclcs.platform.system.api.entity.vo.UserVo">
        <include refid="baseSql"/>
    </select>
    <select id="findListVo" resultType="com.zclcs.platform.system.api.entity.vo.UserVo">
        <include refid="baseSql"/>
    </select>
    <select id="findOneVo" resultType="com.zclcs.platform.system.api.entity.vo.UserVo">
        <include refid="baseSql"/>
    </select>
    <select id="countVo" resultType="java.lang.Integer">
        <include refid="baseCountSql"/>
    </select>
</mapper>
